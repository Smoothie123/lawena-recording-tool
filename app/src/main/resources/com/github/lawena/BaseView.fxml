<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="mainContainer" prefHeight="630.0"
      prefWidth="740.0" xmlns="http://javafx.com/javafx/8.0.40"
      fx:controller="com.github.lawena.AppController">
    <children>
        <HBox spacing="5.0">
            <children>
                <MenuButton fx:id="menu" mnemonicParsing="false" text="Lawena">
                    <items>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="New"/>
                                <MenuItem mnemonicParsing="false" text="Open…"/>
                                <Menu mnemonicParsing="false" text="Open Recent"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem mnemonicParsing="false" text="Close"/>
                                <MenuItem mnemonicParsing="false" text="Save"/>
                                <MenuItem mnemonicParsing="false" text="Save As…"/>
                                <MenuItem mnemonicParsing="false" text="Revert"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem mnemonicParsing="false" text="Preferences…"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem mnemonicParsing="false" onAction="#exit" text="Quit">
                                    <accelerator>
                                        <KeyCodeCombination alt="DOWN" code="F4" control="UP"
                                                            meta="UP" shift="UP" shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Undo"/>
                                <MenuItem mnemonicParsing="false" text="Redo"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem mnemonicParsing="false" text="Cut"/>
                                <MenuItem mnemonicParsing="false" text="Copy"/>
                                <MenuItem mnemonicParsing="false" text="Paste"/>
                                <MenuItem mnemonicParsing="false" text="Delete"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem mnemonicParsing="false" text="Select All"/>
                                <MenuItem mnemonicParsing="false" text="Unselect All"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false"
                                          text="About Lawena Recording Tool..."/>
                            </items>
                        </Menu>
                        <MenuItem mnemonicParsing="false" text="Action 1"/>
                        <MenuItem mnemonicParsing="false" text="Action 2"/>
                    </items>
                </MenuButton>
                <Pane HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="profilesComboBox" prefWidth="150.0"/>
                <SplitMenuButton fx:id="profileSplitMenuButton" mnemonicParsing="false"
                                 onAction="#duplicateProfile" text="New">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#newProfile"
                                  text="New Profile..."/>
                        <MenuItem mnemonicParsing="false" onAction="#renameProfile"
                                  text="Rename Profile..."/>
                        <MenuItem mnemonicParsing="false" onAction="#deleteProfile"
                                  text="Delete Profile..."/>
                    </items>
                </SplitMenuButton>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </HBox>
        <TabPane fx:id="tabs" side="LEFT" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <tabs>
                <Tab fx:id="setupTab" closable="false" text="Setup">
                    <content>
                        <GridPane hgap="2.0" vgap="2.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                                   prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                                   prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                                <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                            </rowConstraints>
                            <children>
                                <TitledPane fx:id="launchPane" animated="false" collapsible="false"
                                            prefHeight="170.0" text="Launch Settings"
                                            GridPane.valignment="TOP"/>
                                <TitledPane fx:id="recorderPane" animated="false"
                                            collapsible="false" prefHeight="170.0"
                                            text="Frame Capturing" GridPane.columnIndex="1"
                                            GridPane.valignment="TOP"/>
                                <TitledPane fx:id="configPane" animated="false" collapsible="false"
                                            prefHeight="350.0" text="Game Configuration"
                                            GridPane.rowIndex="1" GridPane.valignment="TOP"
                                            GridPane.vgrow="ALWAYS"/>
                                <TitledPane fx:id="resourcesPane" animated="false"
                                            collapsible="false" prefHeight="350.0" text="Resources"
                                            GridPane.columnIndex="1" GridPane.rowIndex="1"
                                            GridPane.valignment="TOP" GridPane.vgrow="ALWAYS"/>
                            </children>
                            <padding>
                                <Insets left="3.0" right="3.0"/>
                            </padding>
                        </GridPane>
                    </content>
                </Tab>
                <Tab fx:id="foldersTab" closable="false" text="Folders">
                    <content>
                        <VBox fx:id="foldersPane">
                            <padding>
                                <Insets left="3.0" right="3.0"/>
                            </padding>
                        </VBox>
                    </content>
                </Tab>
                <Tab fx:id="renderingTab" closable="false" text="Rendering">
                    <content>
                        <VBox fx:id="renderingPane">
                            <padding>
                                <Insets left="3.0" right="3.0"/>
                            </padding>
                        </VBox>
                    </content>
                </Tab>
                <Tab fx:id="demosTab" closable="false" text="Demos">
                    <content>
                        <VBox fx:id="demosPane">
                            <padding>
                                <Insets left="3.0" right="3.0"/>
                            </padding>
                        </VBox>
                    </content>
                </Tab>
                <Tab fx:id="tasksTab" closable="false" text="Tasks">
                    <content>
                        <VBox fx:id="tasksPane" spacing="5.0">
                            <padding>
                                <Insets left="3.0" right="3.0"/>
                            </padding>
                        </VBox>
                    </content>
                </Tab>
                <Tab fx:id="logTab" text="Log">
                    <content>
                        <VBox fx:id="logPane" spacing="5.0">
                            <padding>
                                <Insets left="3.0" right="3.0"/>
                            </padding>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="SOMETIMES">
            <children>
                <Label fx:id="leftStatus" maxWidth="-1.0" HBox.hgrow="ALWAYS"/>
                <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS"/>
                <Label fx:id="rightStatus" maxWidth="-1.0" HBox.hgrow="NEVER"/>
                <Button fx:id="launchButton" defaultButton="true" mnemonicParsing="false"
                        onAction="#launch" prefHeight="50.0" prefWidth="200.0" text="Launch Game"/>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
